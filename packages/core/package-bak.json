{
  "name": "atomics",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/SteveAtSentosa/atomics.git",
  "author": "Steven Saunders <steve@sentosatech.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-emotion": "^10.0.6",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-mocha": "^5.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "onchange": "^5.2.0",
    "ramda": "^0.26.1",
    "rimraf": "^2.6.3",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1"
  },
  "scripts": {
    "clean": "rimraf es dist lib",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "webpack --mode=development --output-filename=atomics.js",
    "build:umd:min": "webpack --mode=production --output-filename=atomics.min.js",
    "build": "yarn build:cjs && yarn build:es && yarn build:umd && yarn build:umd:min",
    "prepub": "yarn clean && yarn test && yarn build",
    "test": "mocha --require @babel/register",
    "watch:test": "onchange 'src/**/*.js' 'test/**/*.js' -- yarn test"
  }
}
